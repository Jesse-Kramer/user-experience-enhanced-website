<%- include('./partials/head') %>
</head>
<%- include('./partials/nav') %>
    <main>
        <h1><%- category.name %></h1>
            <section class="article-list">
                <% posts.forEach(post => { %>
                    <a href="<%= category.slug %>/<%= post.slug %>" class="article-link">
                    <article class="article">
                        <picture><img src="<%= post.jetpack_featured_media_url ? post.jetpack_featured_media_url : '/images/placeholder.png' %>" alt="Post Image" loading="lazy"> </picture>
                        <h3 class="headline">
                            <%- post.title.rendered %>
                        </h3>
                        <hr>
                        <div class="post-meta">
                            <span class="author"><%= post.yoast_head_json.author %></span>
                            <span class="reading-time">| <%= post.yoast_head_json.twitter_misc["Geschatte leestijd"] %></span>
                        </div>          
                    </article>
                    </a>
                <% }); %>
            </section>
    </main>

    <%- include('./partials/foot') %>